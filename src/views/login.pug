extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", placeholder="Username", required, type="text")
        input(name="password", placeholder="password", required, type="password")
        input(value="Login", type="submit")
        include partials/social-login
    div.auth-switch  
        span Do not have an account? 
        a(href="/join") Create one now &rarr;